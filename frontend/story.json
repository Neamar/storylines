          "operations": [
            {
              "lhs": {"_type": "state", "data":["storylines", "red_planet", "leaving"]},
              "operator": "=",
              "rhs": true
            }
          ]
        }
      }
    },
    {
      "story": "red_planet",
      "event": "announcement",
      "weight": 1,
